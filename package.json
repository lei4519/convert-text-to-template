{
	"name": "convert-text-to-templat",
	"displayName": "Convert Text To Templat",
	"description": "通过正则提取文字转换为模板。",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"keywords": [
		"text",
		"txt",
		"template",
		"transform",
		"convert"
	],
	"main": "./out/extension.js",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ConvertTextToTemplat.translate"
	],
	"contributes": {
		"commands": [
			{
				"command": "ConvertTextToTemplat.translate",
				"title": "Convert Text To Template",
				"shortTitle": "Convert Text to Template",
				"when": "editorHasSelection"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "ConvertTextToTemplat.translate",
					"group": "z_commands",
					"when": "editorHasSelection"
				}
			]
		},
		"configuration": {
			"title": "ConvertTextToTemplat",
			"properties": {
				"ConvertTextToTemplat.Template": {
					"type": "object",
					"description": "配置转换模板",
					"additionalProperties": {
						"type": "string"
					},
					"default": {
						"default@((?<value>\\d+)[^\\u4e00-\\u9fa5]*?(?<label>[\\u4e00-\\u9fa5][^\\d]*))": "(record,isTS,isExport)=>{if(record.length===0){return''}const exportToken=isExport?'export ':''const constToken=isTS?' as const':''return`\\n${exportToken}const\\${1:VAR_NAME}={${record.map((r,i)=>`\\${${i+2}:${r.var}}:${r.value}`).join(',\\n\\t')}}${constToken}${exportToken}const $1_TEXT={${record.map((r,i)=>`[$1.\\${${i+2}}]:${JSON.stringify(r.label)}`).join(',\\n\\t')}}${constToken}\\n$0`}"
					}
				},
				"ConvertTextToTemplat.TsAsConst": {
					"type": "boolean",
					"default": true,
					"description": "在 TS 文件中生成 as const"
				},
				"ConvertTextToTemplat.Export": {
					"type": "boolean",
					"default": true,
					"description": "生成 export"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	}
}
